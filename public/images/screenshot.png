<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#4a6cf7" />
      <stop offset="100%" stop-color="#0072ff" />
    </linearGradient>
    <style>
      .text {
        font: bold 24px sans-serif;
        fill: white;
      }
      .title {
        font: bold 36px sans-serif;
        fill: white;
      }
      .upload-area {
        fill: rgba(255, 255, 255, 0.1);
        stroke: rgba(255, 255, 255, 0.3);
        stroke-width: 3;
        stroke-dasharray: 10, 5;
      }
      .progress-bar {
        fill: rgba(0, 0, 0, 0.3);
        rx: 6;
        ry: 6;
      }
      .progress-fill {
        fill: url(#gradient);
        rx: 6;
        ry: 6;
      }
      .icon {
        font-size: 48px;
        fill: white;
        text-anchor: middle;
      }
    </style>
  </defs>
  
  <!-- 背景 -->
  <rect width="100%" height="100%" fill="#1e293b" />
  
  <!-- 标题区域 -->
  <rect width="100%" height="70" fill="#111827" />
  <text x="50" y="45" class="title">TG-Image 图床</text>
  
  <!-- 主区域 -->
  <rect x="100" y="120" width="1000" height="500" rx="10" ry="10" fill="#2d3748" />
  
  <!-- 上传区域 -->
  <rect x="200" y="170" width="800" height="300" rx="8" ry="8" class="upload-area" />
  <text x="600" y="270" class="icon" text-anchor="middle">📤</text>
  <text x="600" y="350" class="text" text-anchor="middle">拖放图片到这里或选择文件</text>
  
  <!-- 进度条 -->
  <rect x="250" y="500" width="700" height="12" class="progress-bar" />
  <rect x="250" y="500" width="490" height="12" class="progress-fill" />
  <text x="600" y="540" class="text" text-anchor="middle">70% · 3.5MB/5MB · 1.2MB/s · 剩余时间: 2秒</text>
  
  <!-- 状态信息 -->
  <text x="600" y="580" class="text" text-anchor="middle" fill="#4ade80">正在上传，请稍候...</text>
  
  <!-- 水印 -->
  <text x="600" y="750" fill="rgba(255, 255, 255, 0.3)" text-anchor="middle">
    TG-Image 支持实时上传进度显示和预估时间计算
  </text>
</svg> 